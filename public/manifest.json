  "web_accessible_resources": [
    {
      "resources": ["assets/*", "logo.png", "icon.svg"],
      "matches": ["https://student.psu.ru/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "malkovsin@gmail.com"
    }
  }
